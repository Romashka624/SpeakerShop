<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpeakerShop</title>
    <link href="~/Content/ShowProduct.css" rel="stylesheet">
    <link href="~/Content/layout.css" rel="stylesheet">
    <link href="~/Content/ShowProductDetails.css" rel="stylesheet">
    <link href="~/Content/About.css" rel="stylesheet">
    <link href="~/Content/index.css" rel="stylesheet">
    <link href="~/Content/ProductEditing.css"  rel="stylesheet">
    <link href="~/Content/create-edit.css" rel="stylesheet">
    <link href="~/Content/cart.css" rel="stylesheet">
    <link href="~/images/favicon.ico" rel="icon" type="image/icon" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" charset="utf-8"></script>
</head>
<body>

    <header>
        <div class="wrapper">
            <div class="header_wrap">
                <div class="header_left">
                    <div class="header_logo">
                        @Html.ActionLink("SpeakerShop", "index", "Home", new { @class = "header_logo_link" })
                    </div>
                    <nav class="navigation">
                        <ul class="menu">
                            <li class="menu_item">
                                @Html.ActionLink("Home", "index", "Home", new { @class = "menu_link" })
                            </li>
                            <li class="menu_item">
                                @Html.ActionLink("Product", "ShowProduct", "Home", new { @class = "menu_link" })
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="header_right">
                    <div class="editing">
                        @Html.ActionLink("Editing", "ProductEditing", "Home", new { @class = "header_button_editing" })
                    </div>
                    <div class="header_sing_in">
                        <a href="#" id="my_button_sing_in" class="button_sing_in">Sing in</a>
                    </div>
                    <div class="shopping_cart">
                        <a href="@Url.Action("ProductCart","Home")"><img class="shopping_cart_img" src="~/images/icons/shopping-cart.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>

        <div id="lg" class="lgg">
            <form id="my_login_form" action="index.html" class="login-form">
                <h1>Sing in</h1>
                <div class="txtb">
                    <input type="text">
                    <span data-placeholder="Username"></span>
                </div>

                <div class="txtb">
                    <input type="password">
                    <span data-placeholder="Password"></span>
                </div>

                <input type="submit" class="logbtn" value="Login">

                <div class="bottom-text">
                    <span>Don't have account? </span> <a href="#">@Html.ActionLink("Sing up", "Index", "Home", new { @class = "header_button_sing_up" })</a>
                </div>

            </form>
        </div>
        <script src="~/Scripts/script.js" type="text/javascript"></script>
        <script type="text/javascript">

            $(".txtb input").on("focus", function () {
                $(this).addClass("focus");
            });

            $(".txtb input").on("blur", function () {
                if ($(this).val() == "")
                    $(this).removeClass("focus");
            });
        </script>

    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div class="wrapper">
            <div class="footer_wrap">
                <div class="footer_left">
                    <div class="visa_mastercart">
                        <img class="visa_mastercart_img" src="~/images/icons/visa_mastercard.png" alt="5">
                    </div>

                </div>
                <div class="copyright">
                    © 2020 All right is reserved.
                </div>
                <div class="footer_right">
                    <div class="footer_link"><a href="#"><img class="footer_link_img" src="~/images/icons/whatsapp.png" alt=""></a></div>
                    <div class="footer_link"><a href="#"><img class="footer_link_img" src="~/images/icons/youtube.png" alt=""></a></div>
                    <div class="footer_link"><a href="#"><img class="footer_link_img" src="~/images/icons/instagram.png" alt=""></a></div>
                    <div class="footer_link"><a href="#"><img class="footer_link_img" src="~/images/icons/twitter.png" alt=""></a></div>
                    <div class="footer_link"><a href="#"><img class="footer_link_img" src="~/images/icons/facebook.png" alt=""></a></div>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
    

</body>
</html>
